<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp"
    android:background="@android:color/white">

    <AutoCompleteTextView
        android:id="@+id/autoCompleteProduct"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:hint="Pilih Produk"
        android:inputType="none"
        android:background="@drawable/bg_rounded_border"
        android:padding="12dp"
        app:layout_constraintEnd_toStartOf="@id/etQuantity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <EditText
        android:id="@+id/etQuantity"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:hint="Qty"
        android:text="1"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:background="@drawable/bg_rounded_border"
        android:padding="12dp"
        app:layout_constraintEnd_toStartOf="@id/btnRemoveItem"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
        android:id="@+id/btnRemoveItem"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_remove_circle"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="#DC3545"
        android:contentDescription="Hapus Item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>